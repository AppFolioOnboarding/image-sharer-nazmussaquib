<div id='hello'>Hello World!</div>
<%= link_to 'Image List', images_path %>

<p class='success'><%= notice %></p>

<%= link_to 'New Image', new_image_path %>

<% if @images.count == 0 %>
  <%= content_tag(:p, 'no images', id: 'emptyImageList') %>
<% end %>

<div class='image-collection'>
<% @images.each do |image| %>
  <p class='image-container'>
    <%= image_tag(image.link, class: 'img-width-restrict' ) %>
    <br>created at: <%= image.created_at %>
    <br>tags: 
    <% image.tags.each do |image_tag| %>
      <span class='image-tags'>
      <%= link_to image_tag, images_path(filters: image_tag.name) %>
      </span>
    <% end %>
    <br><%= link_to 'View', image  %>
  </p>
<% end %>
</div>
